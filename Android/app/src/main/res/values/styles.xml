        <item name="chipBackgroundColor">@color/bg_mood_chip</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?colorTertiaryContainer</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="Widget.W2M.CardPending" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?colorTertiaryContainer</item>
        <item name="strokeColor">?colorTertiary</item>
        <item name="shapeAppearanceOverlay">?shapeAppearanceSmallComponent</item>
    </style>

    <style name="Widget.W2M.CardDone" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?colorPrimary</item>
        <item name="strokeColor">?colorOutline</item>
        <item name="shapeAppearanceOverlay">?shapeAppearanceSmallComponent</item>
    </style>
